---
import Head, { type Props as HeadProps } from "@components/astro/Head.astro";
import Footer from "@components/astro/Footer.astro";
import Header from "@components/astro/Header.astro";
import WebComponentsDefinitions from "@components/web-components/index.astro";

type Props = HeadProps;

const { title, description, image, type } = Astro.props;
---

<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16px;
    width: 100vw;
    height: 100vh;
    margin: 0;
    padding: 16px;
    box-sizing: border-box;
    overflow-y: scroll;
    overflow-x: hidden;
  }

  main {
    width: 100%;
    max-width: 800px;
  }
</style>

<html lang="ru">
  <Head title={title} description={description} image={image} type={type} />

  <body>
    <WebComponentsDefinitions />

    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
