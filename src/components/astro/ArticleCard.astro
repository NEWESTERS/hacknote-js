---
import type { CollectionEntry } from 'astro:content';

import PublicationCard from './PublicationCard.astro';

type Props = CollectionEntry<'articles'>['data'] & {
  class?: string;
  id: string;
};

const { pubDate, title, heroImage, class: className, id } = Astro.props;
---

<PublicationCard title={title} pubDate={pubDate} class={className} id={id}>
  <img
    class='image'
    src={heroImage}
    width={196}
    height={160}
    alt={title}
    transition:name={`${id}__image`}
    slot='thumbnail'
  />
</PublicationCard>

<style>
  .image {
    width: 196px;
    height: 160px;
    object-fit: contain;
    border-radius: 16px;
  }
  @media screen and (max-width: 500px) {
    .image {
      width: 100%;
      max-width: 300px;
      height: auto;
    }
  }
</style>
