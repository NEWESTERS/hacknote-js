---
import anchorIcon from "../icons/link.svg";

export type Props = astroHTML.JSX.BaseHTMLAttributes;

const { id } = Astro.props;
---

<h2 {...Astro.props}>
  {
    id !== undefined ? (
      <a href={`#${id}`}>
        <img src={anchorIcon.src} />
        <slot />
      </a>
    ) : (
      <slot />
    )
  }
</h2>
<style>
  img {
    width: 24px;
    height: 24px;
    margin-left: -28px;
    padding-right: 4px;
    display: none;
  }

  h2 {
    font: var(--font_h2);
    color: var(--color_text-white);
  }

  a {
    text-decoration: none;
    color: var(--color_text-white);
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  a:hover > img {
    display: block;
  }
</style>
