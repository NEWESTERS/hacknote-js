---
import dateIcon from '../icons/date.svg';

export interface Props {
  class?: string;
  date: Date;
}

const { class: className, date } = Astro.props;
---

<time class={className} datetime={date.toISOString()}>
  <img src={dateIcon.src} />

  {
    date.toLocaleDateString('ru-ru', {
      year: 'numeric',
      month: 'long',
      day: 'numeric'
    })
  }
</time>
<style>
  img {
    width: 16px;
    height: 16px;
  }

  time {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
    width: max-content;
    font: var(--font_body);
    color: var(--color_text-white);
    padding: 0 8px;
    background-color: var(--color_background-light);
    border-radius: 8px;
  }
</style>
