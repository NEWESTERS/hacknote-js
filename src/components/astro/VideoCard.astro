---
import type { CollectionEntry } from "astro:content";

import PublicationCard from "./PublicationCard.astro";

type Props = CollectionEntry<"videos">["data"] & {
  class?: string;
  id: string;
};

const { pubDate, title, heroImage, class: className, id } = Astro.props;
---

<PublicationCard title={title} pubDate={pubDate} class={className} id={id}>
  <img
    class="image"
    src={heroImage}
    width={196}
    height={160}
    alt={title}
    transition:name={`${id}__image`}
    slot="thumbnail"
  />
</PublicationCard>

<style>
  .image {
    width: 256px;
    max-width: 50%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: contain;
    border-radius: 16px;
    filter: contrast(0.9) brightness(1.1) saturate(0.9);
  }

  @media screen and (max-width: 500px) {
    .image {
      width: 100%;
      max-width: 300px;
      height: auto;
    }
  }
</style>
