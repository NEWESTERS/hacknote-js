---
import { formatDuration } from '@utils/time';

import timeIcon from '../icons/time.svg';

export interface Props {
  class?: string;
  duration: number | string;
}

const { class: className, duration } = Astro.props;

const durationString =
  typeof duration === 'number' ? formatDuration(duration) : duration;
---

<div class={className}>
  <img src={timeIcon.src} />

  {durationString}
</div>
<style>
  img {
    width: 16px;
    height: 16px;
  }

  div {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 8px;
    width: max-content;
    font: var(--font_body);
    color: var(--color_text-white);
    padding: 0 8px;
    background-color: var(--color_background-light);
    border-radius: 8px;
  }
</style>
