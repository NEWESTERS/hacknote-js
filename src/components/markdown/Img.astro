---
interface Props {
  src?: string;
  alt?: string;
}

const { src, alt } = Astro.props;
---

<figure>
  <img src={src} alt={alt} />
  <figcaption>{alt}</figcaption>
</figure>
<style>
  img {
    width: 100%;
    height: auto;
    border-radius: 16px;
  }

  figcaption {
    font-size: 14px;
    margin-top: 8px;
    opacity: 0.5;
  }

  figure {
    margin: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media screen and (max-width: 375px) {
    figure {
      margin-left: -32px;
      width: calc(100% + 64px);
    }

    img {
      border-radius: 0;
    }
  }
</style>
